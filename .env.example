# Physical AI Textbook Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
# URL where the chatbot API is running (used by Docusaurus frontend)
CHATBOT_API_URL=http://localhost:8000

# =============================================================================
# LLM PROVIDER CONFIGURATION
# =============================================================================
# Options: "gemini" (recommended, free tier) or "openai"
LLM_PROVIDER=gemini

# =============================================================================
# GOOGLE GEMINI CONFIGURATION (Recommended - Free Tier)
# =============================================================================
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_CHAT_MODEL=gemini-2.0-flash
GEMINI_EMBEDDING_MODEL=text-embedding-004

# =============================================================================
# OPENAI CONFIGURATION (Legacy/Fallback)
# =============================================================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_CHAT_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# =============================================================================
# QDRANT CLOUD CONFIGURATION (Required)
# =============================================================================
# Create a free cluster at: https://cloud.qdrant.io/
QDRANT_URL=https://your-cluster-id.us-east4-0.gcp.cloud.qdrant.io:6333
QDRANT_API_KEY=your-qdrant-api-key-here
QDRANT_COLLECTION_NAME=textbook_chunks

# =============================================================================
# NEON POSTGRESQL CONFIGURATION (Required)
# =============================================================================
# Create a free database at: https://neon.tech/
# Connection string format: postgresql://user:password@host/database?sslmode=require
DATABASE_URL=postgresql://user:password@ep-xxx.us-east-2.aws.neon.tech/dbname?sslmode=require

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Allowed origins for API requests (JSON array format)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# =============================================================================
# RAG CONFIGURATION (Optional - defaults shown)
# =============================================================================
CHUNK_SIZE_MIN=300
CHUNK_SIZE_MAX=800
TOP_K_RESULTS=5
SIMILARITY_THRESHOLD=0.7

# =============================================================================
# SERVER CONFIGURATION (Optional - defaults shown)
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false
